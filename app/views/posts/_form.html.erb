<%= form_with(model: post) do |form| %>
  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group" >
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
